    <td><%%=sanitize <%= singular_name %>.title %></td>
    <td><%%= link_to t(:show), polymorphic_path(<%= singular_name %>) %></td>
    <td><%%= link_to t(:edit), edit_polymorphic_path(<%= singular_name %>) %></td>
    <td><%%= link_to t(:delete), polymorphic_path(<%= singular_name %>), :confirm => t(:are_you_sure), :method => :delete %></td>
  </tr>
<%% end -%>
</table>

