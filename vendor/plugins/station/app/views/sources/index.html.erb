<h1>Listing sources</h1>

<table>
  <tr>
    <th>URI</th>
    <th>Content type</th>
    <th>Target</th>
    <th>Actions</th>
  </tr>

<% @sources.each do |source| %>
  <tr>
    <td><%= link_to h(source.uri), h(source.uri) %></td>
    <td><%= h source.content_type %></td>
    <td><%= source.target %></td>
    <td><%= link_to 'Show', source %></td>
    <td><%= link_to 'Edit', edit_source_path(source) %></td>
    <td><%= link_to 'Destroy', source, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New source', polymorphic_path([ path_container, Source.new ], :action => :new) %>
