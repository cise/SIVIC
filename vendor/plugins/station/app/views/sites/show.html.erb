<h1><%= t('site.config') %></h1>

  <p>
    <b><%= t('site.name') %></b>: 
    <%= sanitize current_site.name %>
  </p>

  <p>
    <b><%= t('site.description') %></b>: 
    <%= sanitize current_site.description %>
  </p>

  <p>
    <b><%= t('site.logo') %></b>: 
    <%= logo(current_site) %>
  </p>

  <p>
    <b><%= t('site.domain') %></b>: 
    <%= sanitize current_site.domain %>
  </p>

  <p>
    <b><%= t('site.ssl') %></b>: 
    <%= current_site.ssl? %>
  </p>

  <p>
    <b><%= t('site.email') %></b>: 
    <%= sanitize current_site.email %>
  </p>

  <p>
    <b><%= t('site.exception_notifications') %></b>:
    <%= current_site.exception_notifications? %>
  </p>

  <p>
    <b><%= t('site.exception_notifications_email') %></b>:
    <%= sanitize current_site.exception_notifications_email %>
  </p>

  <%= link_to t(:edit), edit_site_path %>
