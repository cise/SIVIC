<h1><%= sanitize @role.name %></h1>

<p>
  <b><%= t('role.stage_type') %>:</b> 
  <%=h @role.stage_type.blank? ? t('stage.all') : t(@role.stage_type.underscore, :count => 1) %>
</p>

<p>
<b><%= t('permission.other') %>:</b><br/>

<% if @role.permissions.any? -%>
  <% @role.permissions.each do |permission| -%>
    <%= permission.title %><br />
  <% end -%>
<% else -%>
  <%= t('role.without_permissions', :role => @role.name) %>
<% end -%>
</p>


<%= link_to t(:edit), edit_role_path(@role) %> |
<%= link_to t(:index), roles_path %>
