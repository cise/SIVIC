<h1>Editing reservation</h1>

<% form_for(@reservation) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :id %><br />
    <%= f.text_field :id %>
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_area :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :type %><br />
    <%= f.text_area :type %>
  </p>
  <p>
    <%= f.label :vc_service %><br />
    <%= f.text_area :vc_service %>
  </p>
  <p>
    <%= f.label :country %><br />
    <%= f.text_area :country %>
  </p>
  <p>
    <%= f.label :room_id %><br />
    <%= f.text_field :room_id %>
  </p>
  <p>
    <%= f.label :aggrement %><br />
    <%= f.check_box :aggrement %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

