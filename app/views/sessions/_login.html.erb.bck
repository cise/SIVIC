<div id="login_div"  class="blue_title">
  <% if error_messages_for(:user).blank? %>
	<div id="lightbox-logo"><span><%= image_tag("bola_clara.png",:class=>"icon")%><%=t('vcc')%></span></div>
  <% end %>
	<%= error_messages_for :user %>
	<div class="form">
	<% form_for user, :url => users_path do |f| -%>
		
		<%= render :partial => 'form', :locals => { :f => f } %>
		
		<div id="captcha"><%= show_simple_captcha(:object=> :user, :label => "Introduzca el texto que ve en la imagen") %> </div>
		
		<div class="button">
			<button type="submit" class="basic_button blue_button"><%=t("done")%></button>
			<span> <%= link_to t('user.lost_password'), lost_password_path, :class => "login_lightbox_link" %></span>
		</div>
	<% end -%>
	</div>

</div>
