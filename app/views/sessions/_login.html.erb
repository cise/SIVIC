<div id="login_div" class="blue_title">
	<div id="lightbox-logo"><span><%= image_tag("bola_clara.png",:class=>"icon")%><%= t('vcc') %></span></div>
  	<div class="form">
          <% form_tag session_url(:protocol => current_site.protocol), :class => "login_form" do -%>
			<!--<div id="login_label"><h3>Enter your Email and Password</h3></div>-->
              <% form_tag session_url(:protocol => current_site.protocol), :class => "login_form" do -%>
 	  					
			<div>
		  		<label for="login"><%= t('email') %></label><br/>
		  		<%= text_field_tag 'login', params[:login] %>
	  		</div>
	  		<div>
	  			<label for="password"><%= t('password.one') %></label><br/>
	    		<%= password_field_tag 'password' %>
	  		</div>
	  		<div>
	  			<label for="remember_me"><%= t('remember_me') %>:</label><%= check_box_tag ('remember_me') %>
	  		</div>
    		<div class="button">
    			<button type="submit" class="basic_button blue_button"><%=t("login")%></button>
				<% end -%>
				<span><%= link_to t('register_now'), signup_path, :class => "login_lightbox_link" %> |  <%= link_to t('user.lost_password'), lost_password_path, :class => "login_lightbox_link" %></span>
			</div>

    	<% end -%>

	</div>
</div>
