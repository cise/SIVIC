<% if space && space.id!=nil%>
 	  <div id="logo">
	    <%= link_logo(space, :size => "h64", :title=>space.name) %>
	  </div>
<%else%>
	<div id="vcc-logo">
		<%= link_to image_tag("claraVC-01.png"), root_path %>
	</div>
<% end %>
<div id="name-space">
	<%if space && space.id!=nil%>
	<%if space.name.size > 20%>
		<span id="small-title" ><%=link_to(sanitize(first_words(space.name,20)),space_path(space), menu_options(:home))%></span>
	<%else%>
		<span id="small-title2"><%=link_to(sanitize(space.name),space_path(space), menu_options(:home))%></span><br />
  <% if space.parent_id? %>
    <span id="small-title">
      <%= link_to logo(space.parent,{:size=>"h32", :title=> space.parent.name }) + space.parent.name, space_path(space.parent) %>
    </span>
  <% end %>
	<%end%>
	<%end%>
</div>
<div id="eu">
 <%= link_to(image_tag("CLARA.png", :style => "width:71px;height:22px;float:rigth;display:block"),"http://redclara.net/" ) %>
  <%= link_to(image_tag("UE.png", :style => "width:71px;height:46px;float:right;"),"http://europa.eu/index_es.htm")%>
</div>
