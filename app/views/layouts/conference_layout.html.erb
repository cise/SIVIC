<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN"
  "http://www.w3.org/TR/html4/strict.dtd">

<html lang="en">
  <head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8">
    <title><%= yield :title %></title>
    <link href="/favicon.ico" rel="shortcut icon" />
    

    <%= stylesheet_link_tag "screen", :media => "screen, projection" %>
    <%= stylesheet_link_tag "conference", :media => "screen, projection" %>
    <%= stylesheet_link_tag "calendar", :media => "screen, projection" %>
    <%= stylesheet_link_tag "jquery.fancybox", :media => "screen, projection" %>
	  <%= stylesheet_link_tag "timeentry", :media => "screen, projection" %>
	  <%= stylesheet_link_tag "print", :media => "print" %>
		
    <!--[if IE]> 
    <%= stylesheet_link_tag "ie", :media => "screen, projection" %>
    <![endif]-->

    <%= javascript_include_tag 'jquery', 'application', 'jquery.livequery', 'jquery.fancybox', 'jquery.easing', 'jquery-ui', 'jquery.form' %>
    <script type="text/javascript" charset="utf-8">
      $(document).ready(function() {
        <%= render :partial => 'layouts/ready.js.erb' %>
        <%= yield :javascript %>
      })
    </script>
		
		<%= yield :headers %>
		<%if current_site.domain == "sivic.redclara.net"%>
<script type="text/javascript">

  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-20726166-1']);
  _gaq.push(['_trackPageview']);

  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();

</script>
		<%end%>
  </head>

	<body>
	  <div id="site">
		  <%= render :partial => "layouts/global" %>

		  <div id="space">
		    <div id="header">
		      <%= render :partial => "layouts/header" %>
		    </div>

		    <div id="content">
		      <div id="selector">
  		      <%= render :partial => "layouts/selector" %>
		      </div>
		      
		      <div id="main">
		        <div id="menu">
		          <%= render :partial => "layouts/menu" %>
		        </div>
		        <div id="embed">
		        <% flash.each do |name, msg| %>
		          <div class="<%= name %>"><%= msg %></div>
            <% end %>

     		    <%= yield %>
		      </div>
			  </div>
                </div>
      <%= render :partial => "layouts/footer" %>  
	  </div>

	  </div>

	</body>
</html>
